<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:shadowColor">@color/secondaryDarkColor</item>
        <item name="android:colorBackground">@color/secondaryColor</item>
        <item name="android:windowBackground">@color/secondaryColor</item>
        <item name="android:statusBarColor">@color/secondaryDarkColor</item>
    </style>

    <style name="Button" parent="AppTheme">
        <item name="android:background">@drawable/standard_button</item>
        <item name="android:fontFamily">@font/averia_sans_libre_light</item>
        <item name="android:padding">10dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchViewDark" parent="AppTheme">
        <item name="android:editTextColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/secondaryDarkColor</item>
        <item name="android:queryBackground">@color/secondaryDarkColor</item>
        <item name="android:backgroundTint">@color/secondaryDarkColor</item>
    </style>

    <style name="SearchViewLight" parent="AppTheme">
        <item name="android:editTextColor">@color/secondaryTextColor</item>
        <item name="android:textColorHint">@color/primaryDarkColor</item>
        <item name="android:queryBackground">@color/primaryDarkColor</item>
        <item name="android:backgroundTint">@color/primaryDarkColor</item>
    </style>

    <style name="DarkCheckBox" parent="AppTheme">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/averia_sans_libre_light</item>
        <item name="android:buttonTint">@color/secondaryColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditTextDark" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@color/secondaryLightColor</item>
        <item name="android:textColorHint">@color/secondaryLightColor</item>
        <item name="android:fontFamily">@font/averia_sans_libre_light</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>