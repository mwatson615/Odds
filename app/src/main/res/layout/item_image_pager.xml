<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.view.ViewPager
        android:id="@+id/itemImageViewPager"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/imagePagerImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageButton
        android:contentDescription="@string/swipe_right_for_previous_image"
        android:id="@+id/arrowLeft"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="@id/imagePagerImageView"
        app:layout_constraintBottom_toBottomOf="@id/imagePagerImageView"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/ic_keyboard_arrow_left_white_24dp"/>


    <ImageButton
        android:contentDescription="@string/swipe_left_for_next_image"
        android:id="@+id/arrowRight"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintRight_toRightOf="@id/imagePagerImageView"
        app:layout_constraintBottom_toBottomOf="@id/imagePagerImageView"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/ic_keyboard_arrow_right_white_24dp"/>

</androidx.constraintlayout.ConstraintLayout>